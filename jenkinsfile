pipeline {
  options {
    timeout(time: 15, unit: 'MINUTES')
  }

  agent {
    dockerfile {
      filename 'Dockerfile'
              dir      '.'
    }
  }

  parameters {
    choice(name: 'SERVICE', choices: [
      '',
      'NotPush',
      'Push',
    ])
  }

  environment {
    INSTANCE = 'Django'
    NAMESPACE = 'Demo'
    TAG = new Date().format('yyyyMMddHHmmss')
  }

  stages {
    stage('Prepare') {
      steps {
         script {
            currentBuild.displayName = "${INSTANCE}-${NAMESPACE}/${params.PushOrNot}"
          }
      }
    }
    stage('Build') {
        steps {
            sh 'starting Build Stage ...'
            sh ' docker ps'
        }
    }
    stage('Test'){
        steps {
            sh 'starting Test Stage'
            sh 'echo curl result'
            sh 'curl http://127.0.0.1:8001'
        }
    }
    stage('Push') {
      when {
        expression {
          return params.SERVICE.equals('Push')
        }
      }
      steps {
        sh 'starting Push Stage'
        sh 'push is ready'
      }
    }

  }
}